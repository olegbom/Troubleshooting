<UserControl x:Class="Troubleshooting.Views.ConnectorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Troubleshooting.Views"
             mc:Ignorable="d">
    <UserControl.Resources>

        <Style x:Key="EditRectangle" TargetType="Rectangle">
            <Setter Property="StrokeThickness" Value="1"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Width" Value="8"/>
            <Setter Property="Height" Value="8"/>
        </Style>
    </UserControl.Resources>
    <Rectangle Style="{StaticResource EditRectangle}" Stroke="DarkOrange"
               Fill="GreenYellow"/>
</UserControl>
